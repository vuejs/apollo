{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "ES2015",
      "ES2020.Symbol.WellKnown"
    ],
    "declaration": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
